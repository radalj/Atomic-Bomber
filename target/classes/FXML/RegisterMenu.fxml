<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.RegisterMenuViewController"
            prefHeight="400.0" prefWidth="600.0">
    <center>
        <VBox alignment="CENTER"  maxWidth="250" spacing="20">
            <Label text="Register Menu" />
            <TextField fx:id="usernameField" promptText="Username" />
            <TextField fx:id="passwordField" promptText="Password" />
            <HBox alignment="CENTER" spacing="20">
                <Button text="Register" onMouseClicked="#register" />
                <Button text="Sign In" onMouseClicked="#signIn" />
            </HBox>
            <Button text="Enter as Guest" onMouseClicked="#enterAsGuest" />
        </VBox>
    </center>
</BorderPane>
